{% extends 'base.html.twig' %}

{# Source Detail Page #}

{% set breadpath =
{ 0:
{ 'path': path('source_index'),
'title': 'Sources'
},
1: {
'title': source.label
}
}
%}

{% block title %}
    {{ source.label }}
{% endblock %}

{% block classes -%}
    basic-page Source-detail
{%- endblock %}

{% block pageheader %}
    <h1>{{ source.label }}</h1>
{% endblock %}

{% block admin %}
{% if is_granted('ROLE_CONTENT_ADMIN') %}
<div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('source_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back </a>

        <a href="{{ path('source_edit', { 'id': source.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit </a>
    </div>
    <div class='btn-group'>
        <form class='delete-form' method="post" action="{{ path('source_delete', {'id': source.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ source.id) }}">
            <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
        </form>
    </div>
</div>
{% endif %}
{% endblock %}

{% block body %}
{% if is_granted('ROLE_CONTENT_ADMIN') %}
<aside class="category-detail-wrapper">
    {% embed "@NinesUtil/term/partial/show.html.twig" with { 'term': source } %}
        {% block callback %}
            <tr>
                <th>Date</th>
                <td>{{ source.date }}</td>
            </tr>
        {% endblock %}
    {% endembed %}
</aside>
{% endif %}
<article>
    {% if clippings|length > 0 %}
        {% include 'clipping/partial/gallery.html.twig' %}
    {% endif %}
</article>

<div class="navigation bottom-pager">
    {{ knp_pagination_render(clippings) }}
</div>


{% endblock %}
