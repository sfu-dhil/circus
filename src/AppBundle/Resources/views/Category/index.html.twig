{% extends 'base.html.twig' %}

{% block title %}categories{% endblock %}

{% block pageheader %}
    <h1>Category List</h1>
    <p class="count">
        Displaying {{ categories|length }} categories of {{ categories.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('category_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
        </div>
    </div>

    {% embed 'NinesUtilBundle:Term:partial/index.html.twig' with {'terms': categories, 'path': 'category_show' } %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(categories) }}
    </div>

{% endblock %}
