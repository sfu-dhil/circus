{% extends 'base.html.twig' %}

{% block title %}New Clipping{% endblock %}


{% block body %}
    <h1>Clipping Creation</h1>

    {{ form_start(form) }}


    {{ form_row(form.imageFile) }}
    <div>
        <ul class="nav nav-tabs">
            <li class="active"><a href="#transcript" data-toggle="tab">Transcript</a></li>
            <li><a href="#metadata" data-toggle="tab">Metadata</a></li>
        </ul>


        <div class="tab-content">

            <div class="spacer">&nbsp;</div>

            <div class="tab-pane active" id="transcript">
                {{ form_row(form.transcription) }}
                {{ form_row(form.annotations) }}
            </div>


            <div class="tab-pane" id="metadata">
                {{ form_rest(form) }}
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a href="{{ path('clipping_index') }}" class="btn btn-warning">Cancel</a>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
